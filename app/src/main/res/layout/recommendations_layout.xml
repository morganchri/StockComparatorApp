<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@id/dollar_price"
        android:text="@string/ticker"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dollar_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/delta_price"
        android:text="@string/dollar_price"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/delta_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/delta_percent"
        android:text="@string/delta_price"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/delta_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/like_button"
        android:text="@string/delta_percent"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/like_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@android:drawable/radiobutton_off_background" />


    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delta_price"
        android:layout_centerHorizontal="true"
        android:text="@string/info"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/industry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"
        android:layout_marginStart="10dp"
        android:text="@string/industry" />

    <TextView
        android:id="@+id/industryValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/industry"
        android:layout_alignTop="@id/industry"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/dividends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/industry"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/dividends" />

    <TextView
        android:id="@+id/dividendsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/industry"
        android:layout_toEndOf="@id/dividends"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:id="@+id/market_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/volume"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/market_cap" />

    <TextView
        android:id="@+id/market_capValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/volume"
        android:layout_toEndOf="@id/market_cap"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividends"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/volume" />

    <TextView
        android:id="@+id/volumeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividends"
        android:layout_toEndOf="@id/volume"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>